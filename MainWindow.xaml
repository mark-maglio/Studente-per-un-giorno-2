        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="597.546">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFFF300" Offset="0"/>
                <GradientStop Color="#FFFF0707" Offset="1"/>
