        <Slider IsEnabled="False" Name="addendo2" HorizontalAlignment="Left" Margin="379,238,0,0" VerticalAlignment="Top" Width="151" RenderTransformOrigin="0.541,1.266" Height="39" ValueChanged="addendo2_ValueChanged"/>
