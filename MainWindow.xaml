        <CheckBox Content="Enabled" HorizontalAlignment="Left" Margin="389,64,0,0" VerticalAlignment="Top" Width="112" Height="27" FontSize="18" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

    </Grid>
